{
  "name": "SectionList",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "pod": "cd ios && pod install && cd ..",
    "start": "react-native start",
    "test": "jest",
    "gentypes": "graphql-codegen -r dotenv/config",
    "reset": "react-native start --reset-cache",
    "run-android-dev": "ENVFILE=.env.dev react-native run-android --variant=devDebug",
    "run-ios-dev": "ENVFILE=.env.dev react-native run-ios --scheme SectionListDev --configuration DebugDev --simulator=\"iPhone 13\"",
    "clean-android-dev": "cd android && ENVFILE=.env.dev ./gradlew clean && cd ..",
    "update-android-dev": "./scripts/codepush/update-android.dev.sh",
    "update-ios-dev": "./scripts/codepush/update-ios.dev.sh",
    "build-android-apk-dev": "yarn android:bundle-dev; cd android && ENVFILE=.env.dev ./gradlew app:assembleDevRelease && open app/build/outputs/apk/dev/release"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@hookstate/core": "^4.0.0-rc21",
    "@react-native-async-storage/async-storage": "^1.17.10",
    "@react-native-community/netinfo": "^9.3.1",
    "@react-navigation/bottom-tabs": "^6.4.0",
    "@react-navigation/native": "^6.0.13",
    "@react-navigation/stack": "^6.3.1",
    "apollo-upload-client": "^17.0.0",
    "graphql": "^16.6.0",
    "i18n-js": "^4.1.1",
    "lodash": "^4.17.21",
    "react": "18.0.0",
    "react-native": "0.69.5",
    "react-native-config": "^1.4.6",
    "react-native-exit-app": "^1.1.0",
    "react-native-gesture-handler": "^2.6.1",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-qrcode-scanner": "^1.5.5",
    "react-native-safe-area-context": "^4.3.4",
    "react-native-screens": "^3.17.0",
    "react-query": "^3.39.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.19.1",
    "@babel/runtime": "^7.12.5",
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/typescript-graphql-request": "^4.5.4",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-codegen/typescript-react-query": "^4.0.1",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.69.5",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "react-test-renderer": "18.0.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
